@using System.Timers
<MudCard>
	<MudCardMedia Image="@($"img/EV/{ChargePoint.Image}")" Height="200" />
	<MudCardContent>
		<MudText>@ChargePoint.Name</MudText>
		<MudGrid>
			<MudItem>
				<MudText Typo="Typo.button">@Power W</MudText> / <MudText Typo="Typo.caption">@(PhaseCount)x</MudText> <MudText Typo="Typo.button">@Current A</MudText>
			</MudItem>
		</MudGrid>
	</MudCardContent>
	<MudCardActions>
		<MudGrid>
			<MudItem>
				<MudButton Variant="@(IsCurrentChargeMode("DIRECT") ? Variant.Filled : Variant.Outlined)" Color="Color.Primary" OnClick="@(() => SetChargeMode("DIRECT"))">Direct</MudButton>
				<MudButton Variant="@(IsCurrentChargeMode("EXCESS") ? Variant.Filled : Variant.Outlined)" Color="Color.Tertiary" OnClick="@(() => SetChargeMode("EXCESS"))">Excess</MudButton>
				<MudButton Variant="@(IsCurrentChargeMode("STOP") ? Variant.Filled : Variant.Outlined)" Color="Color.Error" OnClick="@(() => SetChargeMode("STOP"))">Stop</MudButton>
			</MudItem>
		</MudGrid>
	</MudCardActions>
</MudCard>
