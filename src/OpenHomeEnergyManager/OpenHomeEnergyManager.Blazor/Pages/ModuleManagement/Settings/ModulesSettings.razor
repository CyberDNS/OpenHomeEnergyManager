@page "/settings/module-management/modules"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-6">
    @if (_modules == null)
    {
        <MudGrid Justify="Justify.Center">
            <MudProgressCircular Color="Color.Primary" Style="height:70px;width:70px;" Indeterminate="true" />
        </MudGrid>
    }
    else
    {
        <CascadingValue Value="_moduleServiceDefinitions">
        <MudGrid Justify="Justify.Center">
            @foreach (var module in _modules)
            {
                <MudItem xs="12" md="6">
                    <ModuleSettingsCard Module="module" OnDeleted="OnModuleDeleted" />
                </MudItem>
            }
        </MudGrid>
        </CascadingValue>
    }
</MudContainer>

<MudFab Color="Color.Primary" Icon="@Icons.Filled.Add" Class="fab-button-bottom-right" OnClick="AddModule" />